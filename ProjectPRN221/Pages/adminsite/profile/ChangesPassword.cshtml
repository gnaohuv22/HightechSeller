@page
@model ProjectPRN221.Pages.adminsite.profile.ChangesPasswordModel
@{
    ViewData["Title"] = "Changes Password";
    Layout = "_AdminLayout";
}

        <div class="container-scroller">
    <partial name="/Pages/_HeaderAdminsite.cshtml" model="new ProjectPRN221.Pages._HeaderAdminsiteModel()" />

    <partial name="/Pages/_LeftPageAdminSite.cshtml" model="new ProjectPRN221.Pages._LeftPageAdminSiteModel()" />
                
                <div class="container" style="margin-top: 50px">   
                    <div class="row gutters">                      
                        <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
                            <div class="card h-100">

                                    <div class="card-body">
                                        <div class="account-settings">
                                            <div class="user-profile">
                                                <div class="user-avatar">
                                                    <img src="@Model.Admin.Image" alt="Admin" style="width: 100px; height: 100px">
                                                </div>
                                                <h5 class="user-name">@Model.Admin.Name</h5>
                                                <h6 class="user-email">@Model.Admin.Gmail</h6>
                                            </div>
                                            <div class="about">
                                                <a href="/adminsite/profile/Edit" class="btn btn-secondary">Edit Profile</a>
                                            </div>
                                        </div>
                                    </div>

                            </div>
                        </div>
                        <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
                            <div class="card h-100">
                                <div class="card-body">
                                    <div class="tabs-listing">
                                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                            <h6 class="mb-2 text-primary">Change Password</h6>
                                        </div>
                                @if(Model.Mess != null)
                                {
                                    <h5 style="color: red; text-align: center">@Model.Mess</h5>
                                }
                                        <form method="post">
                                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                                <div class="form-group">
                                                    <label for="eMail">Create New Password *</label>
                                                    <input type="password" name="spass" class="form-control" placeholder="Create New Password" id="eMail" >
                                                </div>
                                            </div>
                                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                                <div class="form-group">
                                                    <label for="phone">Re-Enter Password *</label>
                                                    <input type="password" name="respass"class="form-control" placeholder="Re-Enter Password" id="phone">
                                                </div>
                                            </div>
                                            <div class="row gutters">
                                                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                                    <div class="text-right" style="margin-top: 30px;">
                                                        <button type="submit" id="submit" name="submit"  class="btn btn-primary">Change Password</button>                                  
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div> 
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
