    </head>
    <body>
        <div class="container-scroller">
        <partial name="/Pages/_HeaderAdminsite.cshtml" model="new ProjectPRN221.Pages._HeaderAdminsiteModel()" />

        <partial name="/Pages/_LeftPageAdminSite.cshtml" model="new ProjectPRN221.Pages._LeftPageAdminSiteModel()" />
                <!-- partial -->
                <div class="main-panel">        
                    <div class="content-wrapper">
                        <form class="forms-sample" method="post" action="CustomerController">
                            <input type="hidden" name="service" value="updateCustomer">

                            <c:forEach var="d" items="${data}">

                                <div class="row">

                                    <div class="col-md-6 grid-margin stretch-card">
                                        <div class="card">
                                            <div class="card-body">
                                                <h4 class="card-title">Update Customer</h4>
                                                <p class="card-description">
                                                    Fill all the bank
                                                </p>

                                                <input type="hidden" name="id" value="${d.customer_id}">

                                                <div class="form-group">
                                                    <label for="username">Username</label>
                                                    <input type="text" class="form-control" name="username" id="username" value="${d.username}" placeholder="Username"  required="">
                                                </div>

                                                <div class="form-group">
                                                    <label for="password">Password</label>
                                                    <input type="text" class="form-control" name="password" id="password" value="${d.password}" placeholder="Password"  required="">
                                                </div>

                                                <div class="form-group">
                                                    <label for="name">Name</label>
                                                    <input type="text" class="form-control" name="name" id="name" value="${d.name}" placeholder="Name"  required="">
                                                </div>

                                                <div class="form-group">
                                                    <label for="dob">Date of birth</label>
                                                    <input type="date" class="form-control" name="dob" id="dob" value="${d.dob}" placeholder="Date of birth"  required="">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 grid-margin stretch-card">
                                        <div class="card">
                                            <div class="card-body">
                                                <h4 class="card-title">Update Customer</h4>
                                                <p class="card-description">
                                                    Fill all the bank
                                                </p>

                                                <div class="form-group">
                                                    <label for="gender">Gender: </label> <br>
                                                    <c:if test="${d.gender==true}" >
                                                        <input type="radio" name="gender" checked="checked" value="1"> Male  
                                                        <input style="margin-left:50px" type="radio" name="gender" value="0"> Female
                                                    </c:if>
                                                    <c:if test="${d.gender==false}" >
                                                        <input type="radio" name="gender" value="1"> Male  
                                                        <input style="margin-left:50px" type="radio" checked="checked" name="gender" value="0"> Female
                                                    </c:if>

                                                </div>

                                                <div class="form-group">
                                                    <label for="username">Email </label>
                                                    <input type="email" class="form-control" name="gmail" value="${d.gmail}"  placeholder="Your Email Address"  required="" >
                                                </div>

                                                <div class="form-group">
                                                    <label for="phone">Phone </label>
                                                    <input type="text" class="form-control" name="phone" value="${d.phone}" placeholder="Phone" required="">
                                                </div>
                                                <div class="form-group">
                                                    <label for="address">Address</label>
                                                    <input type="text" class="form-control"  name="address" value="${d.address}" placeholder="Address" required="">
                                                </div>
                                                <div class="form-group">
                                                    <label for="status">Status</label>
                                                    <select class="form-control" name="status" id="status">
                                                        @*<option value="Active"  ${(d.status) eq  "Active" ? "selected" : ""}>Active</option>*@
                                                        @*<option value="Deactive"  ${(d.status) eq  "Deactive"? "selected" : ""}>Deactive</option>*@
                                                    </select>
                                                </div>
                                                <button type="submit" name="submit" class="btn btn-primary me-2">Submit</button>
                                                <button class="btn btn-light">Cancel</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </c:forEach>
                        </form>
                    </div>
