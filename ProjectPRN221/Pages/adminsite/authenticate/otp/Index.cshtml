@page
@model ProjectPRN221.Pages.adminsite.authenticate.logout.IndexModel
@{
    ViewData["Title"] = "OTP";
    Layout = "_AdminLayout";
}

        <div class="container-scroller">
            <div class="container-fluid page-body-wrapper full-page-wrapper">
                <div class="content-wrapper d-flex align-items-center auth px-0">
                    <div class="row w-100 mx-0">
                        <div class="col-lg-4 mx-auto">
                            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
             
                                <h2 style="text-align: center">Forgot Password</h2>

                                <form method="post">
                                    <div class="form-group">
                                        <input type="text" class="form-control form-control-lg" name="otp" placeholder="OTP">
                                    </div>
                                    <div class="mt-3" style="text-align: center">
                                        <button type="submit" name="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">SUBMIT OTP</button>
                                    </div>
                                </form>

                                <div class="my-2 d-flex justify-content-between align-items-center">
                                    <div class="form-check">
                                    </div>
                                    <a href="/adminsite/authenticate/login" class="auth-link text-black">Sign In?</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
