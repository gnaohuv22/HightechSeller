@page
@model ProjectPRN221.Pages.adminsite.about.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "_AdminLayout";
}


        <div class="container-scroller">

    <partial name="/Pages/_HeaderAdminsite.cshtml" model="new ProjectPRN221.Pages._HeaderAdminsiteModel()" />

    <partial name="/Pages/_LeftPageAdminSite.cshtml" model="new ProjectPRN221.Pages._LeftPageAdminSiteModel()" />

                <!-- partial -->
                <div class="main-panel">     
                    <div class="content-wrapper">
                            <form class="forms-sample" method="post" enctype="multipart/form-data">
                                <input type="hidden" asp-for="About.AId" />
                                <input type="hidden" asp-for="About.Image"/>
                                <div class="row">
                                    <div class="col-md-12 grid-margin stretch-card">
                                        <div class="card">
                                            <div class="card-body">
                                                <h4 class="card-title">@Model.About.Title</h4>
                                                <p class="card-description">
                                                    Fill all the bank
                                                </p>

                                                <div class="form-group">
                                                    <label  asp-for="About.Title">Tile</label>
                                                    <input type="text" class="form-control" asp-for="About.Title" required>
                                                </div>
                                    @if (Model.About.AId == 6)
                                    {
                                                <div class="form-group">
                                                    <label asp-for="@Model.FileUploads">Image</label>
                                                    <img id="preview-img" src="@Model.About.Image" alt="@Model.About.Image" style="width: 30%">
                                                    <input type="file" asp-for="@Model.FileUploads"  
                                                     class="form-control" onchange="previewImage()" accept="image/*" >
                                                </div>                                        
                                    }
                                    

                                                <div class="form-group">
                                                    <label asp-for="About.Content">Content</label> <br>
                                                    <textarea  asp-for="About.Content" ></textarea>
                                                </div>

                                                <div style="text-align: center">
                                                    <button type="submit"  name="submit" class="btn btn-primary me-2">Submit</button>
                                                    <button class="btn btn-light">Cancel</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                    </div>
                    <footer class="footer">
                        <div class="d-sm-flex justify-content-center justify-content-sm-between">
                            <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Premium <a href="https://www.bootstrapdash.com/" target="_blank">Bootstrap admin template</a> from BootstrapDash.</span>
                            <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Copyright © 2021. All rights reserved.</span>
                        </div>
                    </footer>
                </div>
            </div>
