@page
@model ProjectPRN221.Pages.adminsite.newsgroup.IndexModel

@{
    ViewData["Title"] = "News Group";
    Layout = "_AdminLayout";
}

                <div class="container-scroller">

    <partial name="/Pages/_HeaderAdminsite.cshtml" model="new ProjectPRN221.Pages._HeaderAdminsiteModel()" />

    <partial name="/Pages/_LeftPageAdminSite.cshtml" model="new ProjectPRN221.Pages._LeftPageAdminSiteModel()" />

                <!-- partial -->
                <div class="main-panel">
                    <div class="content-wrapper">
                        <div class="col-lg-12 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-sm-flex justify-content-between align-items-start">
                                        <div>
                                            <h4 class="card-title card-title-dash">News Group</h4>
                                        </div>
                                        <div>
                                            <form class="search-form" method="post">
                                                <input type="hidden"  name="service" value="searchNewsGroup"/>
                                                <input type="text" class="form-control" name="name" placeholder="Search Here" title="Search here">
                                            </form>
                                        </div>
                                        <div>
                                            <a href="/adminsite/newsgroup/Create" class="btn btn-primary text-white me-0"><i class="mdi mdi-account-plus"></i> Add new News Group</a>
                                            <a onclick="exportToExcel()" class="btn btn-primary text-white me-0"><i class="icon-download"></i> Export</a>
                                        </div>
                                    </div>

        
                                    <div class="table-responsive">
                                        <table class="table table-hover" id="myTable">
                                            <thead>
                                                <tr>
                                                    <th>ID</th>
                                                    <th>Name</th>
                                                    <th>Update</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                        @foreach (var item in Model.NewsGroup)
                                        {
                                        <tr>
                                                        <td>@item.NewsgroupId</td>
                                                        <td>@item.NewsgroupName</td>
                                                        <td><div class="badge badge-info"><a href="/adminsite/newsgroup/Edit?id=${d.newsgroup_id}">Update</a></div></td>
                                                        @*<td ><div class="badge badge-danger"><a href="NewsGroupController?service=deleteNewsGroup&id=${d.newsgroup_id}">Delete</a></div></td> *@
                                                    </tr> 
                                        }
                                            </tbody>
                                        </table>

                                     @*PAGING*@ 

                                    <div style="text-align: center">
                                        @if (Model.NewsGroup.PageIndex > 1)
                                        {
                                            <a href="?pageIndex=@(Model.NewsGroup.PageIndex - 1)">Previous</a>
                                        }
                                        else
                                        {
                                            <span>Previous</span>
                                        }

                                        @for (int i = 1; i <= Model.NewsGroup.TotalPages; i++)
                                        {
                                            @if (i == Model.NewsGroup.PageIndex)
                                            {
                                                <span>@i</span>
                                            }
                                            else
                                            {   
                                                <a href="?pageIndex=@i">@i</a>
                                                @*@if (Model.Admin. == null)
                                                {
                                                    <a href="?page=@i">@i</a>
                                                }*@
                                            }
                                        }

                                        @if (Model.NewsGroup.PageIndex < Model.NewsGroup.TotalPages)
                                        {
                                            <a href="?pageIndex=@(Model.NewsGroup.PageIndex + 1)">Next</a>
                                        }
                                        else
                                        {
                                            <span>Next</span>
                                        }
                                    </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
