@page
@model ProjectPRN221.Pages.adminsite.comment.IndexModel

@{
    ViewData["Title"] = "Comment";
    Layout = "_AdminLayout";
}

        <div class="container-scroller">
    <partial name="/Pages/_HeaderAdminsite.cshtml" model="new ProjectPRN221.Pages._HeaderAdminsiteModel()" />

    <partial name="/Pages/_LeftPageAdminSite.cshtml" model="new ProjectPRN221.Pages._LeftPageAdminSiteModel()" />
                <!-- partial -->
                <div class="main-panel">
                    <div class="content-wrapper">
                        <div class="col-lg-12 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-sm-flex justify-content-between align-items-start">
                                        <div>
                                            <h4 class="card-title card-title-dash">Comment</h4>
                                        </div>

                                        <div>
                                            <form class="search-form" method="post">
                                                <input type="hidden" name="service" value="searchComment" />
                                                <input type="text" class="form-control" name="content" placeholder="Search Here" title="Search here">
                                            </form>
                                        </div>

                                        <div>
                                            <a onclick="exportToExcel()" class="btn btn-primary text-white me-0"><i class="icon-download"></i> Export</a>
                                        </div>
                                    </div>

                                                    
                                    <div class="table-responsive">
                                        <table class="table table-hover" id="myTable">
                                            <thead>
                                                <tr>
                                                    <th>ID</th>
                                                    <th>Product</th>
                                                    <th>Customer</th>
                                                    <th>Comment Date</th>
                                                    <th>Comment Content</th>
                                                    <th>Delete</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                        @foreach (var item in Model.Comment)
                                        {
                                        <tr>
                                                        <td>@item.CommentId</td>
                                                        <td>@item.Product.ProductName</td>
                                                        <td>@item.Customer.CustomerId</td>
                                                        <td>@item.CommentDate</td> 
                                                        <td>@item.CommentContent</td>
                                                        <td ><div class="badge badge-danger"><a href="/adminsite/comment/Delete?id=@item.CustomerId">Delete</a></div></td> 
                                                    </tr>
                                        }
                                            </tbody>
                                        </table> 
                                      @*PAGING*@ 

                                    <div style="text-align: center">
                                        @if (Model.Comment.PageIndex > 1)
                                        {
                                            <a href="?pageIndex=@(Model.Comment.PageIndex - 1)">Previous</a>
                                        }
                                        else
                                        {
                                            <span>Previous</span>
                                        }

                                        @for (int i = 1; i <= Model.Comment.TotalPages; i++)
                                        {
                                            @if (i == Model.Comment.PageIndex)
                                            {
                                                <span>@i</span>
                                            }
                                            else
                                            {   
                                                <a href="?pageIndex=@i">@i</a>
                                                @*@if (Model.Admin. == null)
                                                {
                                                    <a href="?page=@i">@i</a>
                                                }*@
                                            }
                                        }

                                        @if (Model.Comment.PageIndex < Model.Comment.TotalPages)
                                        {
                                            <a href="?pageIndex=@(Model.Comment.PageIndex + 1)">Next</a>
                                        }
                                        else
                                        {
                                            <span>Next</span>
                                        }
                                    </div>     
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
