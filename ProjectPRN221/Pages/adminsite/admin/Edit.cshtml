<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>Star Admin2 </title>
        <link rel="stylesheet" href="~/admin/vendors/feather/feather.css">
        <link rel="stylesheet" href="~/admin/vendors/mdi/css/materialdesignicons.min.css">
        <link rel="stylesheet" href="~/admin/vendors/ti-icons/css/themify-icons.css">
        <link rel="stylesheet" href="~/admin/vendors/typicons/typicons.css">
        <link rel="stylesheet" href="~/admin/vendors/simple-line-icons/css/simple-line-icons.css">
        <link rel="stylesheet" href="~/admin/vendors/css/vendor.bundle.base.css">
        <link rel="stylesheet" href="~/admin/css/vertical-layout-light/style.css">
        <link rel="shortcut icon" href="~/admin/images/favicon.png" />
    </head>
    <body>
        <div class="container-scroller">
        <partial name="/Pages/_HeaderAdminsite.cshtml" model="new ProjectPRN221.Pages._HeaderAdminsiteModel()" />

        <partial name="/Pages/_LeftPageAdminSite.cshtml" model="new ProjectPRN221.Pages._LeftPageAdminSiteModel()" />
                <!-- partial -->
                <div class="main-panel">        
                    <div class="content-wrapper">

                        <form class="forms-sample" method="post" action="AdminController">
                            <input type="hidden" name="service" value="updateAdmin">

                            <c:forEach var="d" items="${data}">
                                <div class="row">

                                    <div class="col-md-6 grid-margin stretch-card">
                                        <div class="card">
                                            <div class="card-body">
                                                <h4 class="card-title">Update Admin</h4>
                                                <p class="card-description">
                                                    Fill all the bank
                                                </p>

                                                <input type="hidden" name="id" value="${d.admin_id}">

                                                <div class="form-group">
                                                    <label for="role">Role</label>
                                                    <input type="text" class="form-control" name="role" id="role" value="${d.role}" placeholder="Role">
                                                </div>
                                                <div class="form-group">
                                                    <label for="username">Username</label>
                                                    <input type="text" class="form-control" name="username" id="username" value="${d.username}" placeholder="Username">
                                                </div>
                                                <div class="form-group">
                                                    <label for="password">Password</label>
                                                    <input type="text" class="form-control" name="password" id="password" value="${d.password}" placeholder="Password">
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-6 grid-margin stretch-card">
                                        <div class="card">
                                            <div class="card-body">
                                                <h4 class="card-title">Update Admin</h4>
                                                <p class="card-description">
                                                    Fill all the bank
                                                </p>
                                                <div class="form-group">
                                                    <label for="name">Name</label>
                                                    <input type="text" class="form-control" name="name" id="name" value="${d.name}" placeholder="Name">
                                                </div>
                                                <div class="form-group">
                                                    <label for="phone">Phone</label>
                                                    <input type="text" class="form-control" name="phone" id="phone" value="${d.phone}" placeholder="Phone">
                                                </div>
                                                <div class="form-group">
                                                    <label for="gmail">Email</label>
                                                    <input type="email" class="form-control" name="gmail" id="gmail" value="${d.gmail}" placeholder="Email">
                                                </div>
                                                <div class="form-group">
                                                    <label for="status">Status</label>
                                                    <select class="form-control" name="status" id="status">
                                                        @*<option value="Active"  ${(d.status) eq  "Active" ? "selected" : ""}>Active</option>*@
                                                        @*<option value="Deactive"  ${(d.status) eq  "Deactive"? "selected" : ""}>Deactive</option>*@
                                                    </select>
                                                </div>
                                                <button type="submit" name="submit" class="btn btn-primary me-2">Submit</button>
                                                <button class="btn btn-light">Cancel</button>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </c:forEach>
                        </form>
                    </div>
                    <footer class="footer">
                        <div class="d-sm-flex justify-content-center justify-content-sm-between">
                            <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Premium <a href="https://www.bootstrapdash.com/" target="_blank">Bootstrap admin template</a> from BootstrapDash.</span>
                            <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Copyright © 2021. All rights reserved.</span>
                        </div>
                    </footer>
                </div>
            </div>
        </div>

        <script src="~/admin/vendors/js/vendor.bundle.base.js"></script>
