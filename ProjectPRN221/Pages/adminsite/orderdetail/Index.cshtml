@page
@model ProjectPRN221.Pages.adminsite.orderdetail.IndexModel

@{
    ViewData["Title"] = "Product Detail";
    Layout = "_AdminLayout";
}


        <div class="container-scroller">

    <partial name="/Pages/_HeaderAdminsite.cshtml" model="new ProjectPRN221.Pages._HeaderAdminsiteModel()" />

    <partial name="/Pages/_LeftPageAdminSite.cshtml" model="new ProjectPRN221.Pages._LeftPageAdminSiteModel()" />

                <!-- partial -->
                <div class="main-panel">
                    <div class="content-wrapper">
                        <div class="col-lg-12 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-sm-flex justify-content-between align-items-start">
                                        <div>
                                            <h4 class="card-title card-title-dash">Order Detail</h4>
                                        </div>
                                        <div>                                        
                                            <a onclick="exportToExcel()" class="btn btn-primary text-white me-0"><i class="icon-download"></i> Export</a>
                                        </div>

                                    </div>

                                    <div class="table-responsive">
                                        <table class="table table-hover" id="myTable">
                                            <thead>
                                                <tr>
                                                    <th>ID</th>
                                                    <th>Order Id</th>
                                                    <th>Product Name</th>
                                                    <th>Image</th>
                                                    <th>List Price</th>
                                                    <th>Quantity Order</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.OrderDetail) {
                                                    <tr>
                                                        <td>@item.OrderdetailId</td>
                                                        <td>@item.OrderId</td>
                                                        <td>@item.Product.ProductName</td> 
                                                        <td><img src="@item.Product.Image" alt="alt"/></td>
                                                        <td class="number">@item.ListPrice</td> 
                                                        <td>@item.QuantityOrder</td> 
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>

                                      @*PAGING*@ 

                                    <div style="text-align: center">
                                        @if (Model.OrderDetail.PageIndex > 1)
                                        {
                                            <a href="?pageIndex=@(Model.OrderDetail.PageIndex - 1)">Previous</a>
                                        }
                                        else
                                        {
                                            <span>Previous</span>
                                        }

                                        @for (int i = 1; i <= Model.OrderDetail.TotalPages; i++)
                                        {
                                            @if (i == Model.OrderDetail.PageIndex)
                                            {
                                                <span>@i</span>
                                            }
                                            else
                                            {   
                                                <a href="?pageIndex=@i">@i</a>
                                                @*@if (Model.Admin. == null)
                                                {
                                                    <a href="?page=@i">@i</a>
                                                }*@
                                            }
                                        }

                                        @if (Model.OrderDetail.PageIndex < Model.OrderDetail.TotalPages)
                                        {
                                            <a href="?pageIndex=@(Model.OrderDetail.PageIndex + 1)">Next</a>
                                        }
                                        else
                                        {
                                            <span>Next</span>
                                        }
                                    </div>
                                    
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
