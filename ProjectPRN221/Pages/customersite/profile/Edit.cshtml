@page
@model ProjectPRN221.Pages.customersite.profile.EditModel

@{
    ViewData["Title"] = "Edit Profile";
    Layout = "CustomerLayout";
}

    @*HEADER*@
<partial name="/Pages/_HeaderCustomersite.cshtml" model="new ProjectPRN221.Pages._HeaderCustomerSiteModel()" />


    @*MAIN*@
        <div class="container">
           <form method="post" enctype="multipart/form-data" >
            <input type="hidden" asp-for="Customer.CustomerId">
            <input type="hidden" asp-for="Customer.Username">
            <input type="hidden" asp-for="Customer.Password">
            <input type="hidden" asp-for="Customer.Status">
            <input type="hidden" asp-for="Customer.Gender" >
            <input type="hidden" asp-for="Customer.Image" >
            <div class="row gutters">
                    <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
                        <div class="card h-100">
                            <div class="card-body">
                                <div class="account-settings">
                                    <div class="user-profile">
                                        <div class="user-avatar">
                                              <label asp-for="@Model.FileUploads">Image</label>
                                              <img id="preview-img" src="@Model.Customer.Image" alt="@Model.Customer.Image" style="width: 30%">
                                              <br>
                                              <input type="file"  asp-for="@Model.FileUploads" style="width: 200px;"
                                              class="form-control" onchange="previewImage()" accept="image/*" >
                                        </div>
                                    </div>
                                    <div class="about">
                                        <h4>About</h4>
                                        <p style="font-size: 13px">Full Name: @Model.Customer.Name</p>
                                        <p style="font-size: 13px">Phone: @Model.Customer.Phone</p>
                                        <p style="font-size: 13px">Email: @Model.Customer.Email</p>
                                        <p style="font-size: 13px">Address: @Model.Customer.Address</p>
                                        <p style="font-size: 13px">Gender: @(Model.Customer.Gender==true?"Male":"Female")</p>
                                    </div>
                                </div>
                                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                    <div class="text-center">
                                        <a href="/customersite/profile" id="submit" name="submit" class="btn btn-secondary">Cancel</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
                    <div class="card h-100">
                            <div class="card-body">
                                    <div class="row gutters">
                                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                            <h6 class="mb-2 text-primary">Personal Details</h6>
                                        </div>

                                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                            <div class="form-group">
                                                <label asp-for="Customer.Name">Full Name</label>
                                                <input type="text" asp-for="Customer.Name" class="form-control" required>
                                            </div>
                                        </div>

                                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                            <div class="form-group">
                                                <label asp-for="Customer.Email">Email</label>
                                                <input type="text" asp-for="Customer.Email" class="form-control" required>
                                            </div>
                                        </div>
                                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                            <div class="form-group">
                                                <label asp-for="Customer.Phone">Phone</label>
                                                <input type="text" asp-for="Customer.Phone" class="form-control" required>
                                            </div>
                                        </div>
                                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                            <div class="form-group">
                                                <label asp-for="Customer.Dob">Dob</label>
                                                <input type="date" asp-for="Customer.Dob" class="form-control" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row gutters">

                                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                            <div class="form-group">
                                                <label asp-for="Customer.Address">Address</label>
                                                <input type="text" asp-for="Customer.Address" class="form-control" required>
                                            </div>
                                        </div>

                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group">
                                            <label for="sTate">Gender</label>
                                            <input type="radio" name="gender" value="male" @(Model.Customer.Gender == true ? "checked=\"checked\"" : "")  /> Male
                                            <input type="radio" name="gender" value="female" style="margin-left: 50px" @(Model.Customer.Gender == false ? "checked=\"checked\"" : "") /> Female
                                        </div>
                                    </div>

                                    </div>

                                    <div class="row gutters">
                                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                            <div class="text-center" style="margin-top: 50px; margin-bottom: 50px; margin-right: 200px">
                                                <button type="submit" id="submit" name="submit"  class="btn btn-primary">Update</button>
                                            </div>
                                        </div>
                                    </div>  
                               
                            </div>
                    </div>
                </div>
            </div>
             </form>
        </div>

        <script>
                                                        function previewImage() {
                                                            var preview = document.querySelector('#preview-img');
                                                            var file = document.querySelector('input[type=file]').files[0];
                                                            var reader = new FileReader();

                                                            reader.onloadend = function () {
                                                                preview.src = reader.result;
                                                            };

                                                            if (file) {
                                                                reader.readAsDataURL(file);
                                                            } else {
                                                                preview.src = "";
                                                            }
                                                        }
        </script>
