@page
@model ProjectPRN221.Pages.customersite.historyorder.DetailModel
@{
    ViewData["Title"] = "History OrderDetail";
    Layout = "CustomerLayout";
}
        <style>
            .orderstatus {
                margin-bottom:  20px;
                display: flex;
                justify-content: space-evenly;
                margin-top:   20px;
            }
        </style>

    
    @*HEADER*@
<partial name="/Pages/_HeaderCustomersite.cshtml" model="new ProjectPRN221.Pages._HeaderCustomerSiteModel()" />

        <div class="col-lg-12 col-md-12">
            <div>
                <div style="text-align: center">
                    <h1 class="">Order Detail</h1>
                </div>
            </div>
            <div>
                <table style="width: 100%">
                    <thead>
                        <tr>
                            <th>Product Name</th>
                            <th>Image</th>
                            <th>List Price</th>
                            <th>Quantity Order</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model.OrderDetails){
                            <tr>
                                <td style="width: 20%">@item.Product.ProductName</td> 
                                <td style="width: 30%"><img src="@item.Product.Image" alt="@item.Product.Image" style="width: 40%"/></td>
                                <td style="width: 20%" class="number">@item.ListPrice</td> 
                                <td style="width: 10%">@item.QuantityOrder</td> 
                            </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
