@page
@model ProjectPRN221.Pages.customersite.warranty.OrderModel
@{
    ViewData["Title"] = "Order Warranty";
    Layout = "CustomerLayout";
}

        <style>
            .orderstatus {
                margin-bottom:  20px;
                display: flex;
                justify-content: space-evenly;
                margin-top:   20px;
            }
        </style>


    @*HEADER*@
<partial name="/Pages/_HeaderCustomersite.cshtml" model="new ProjectPRN221.Pages._HeaderCustomerSiteModel()" />

        <div class="col-lg-12 col-md-12">
            <div>
                <div style="text-align: center">
                    <h1 class="">Order Warranty</h1>
                </div>
            </div>
            <div>
                <table style="width: 100%">
                    <thead>
                        <tr>
                            <th>Product Name</th>
                            <th>Image</th>
                            <th>Quantity Order</th>
                            <th>Order Date</th>
                            <th>Warranty</th>
                        </tr>
                    </thead>
                    <tbody>
                       @foreach(var item in Model.Warranties)
                       {
                            <tr>
                                <td style="width: 20%">@item.Product_name</td> 
                                <td style="width: 30%"><img src="@item.Image" alt="alt" style="width: 60%"/></td>
                                <td>@item.Quantity_order</td> 
                                <td>@item.Order_date</td> 
                                <td>
                                    <div>
                                        <a href="/customersite/warranty/Create?id=@item.Orderdetail_id">Create Warranty</a>
                                    </div>
                                </td> 
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

